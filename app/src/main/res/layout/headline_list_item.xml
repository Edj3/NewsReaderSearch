<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/headline_list_image"
        android:contentDescription="@string/articles"
        android:background="@drawable/divider"
        android:src="@drawable/ic_business"
        android:scaleType="fitCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"/>

    <RelativeLayout android:id="@+id/headline_data_layout"
        android:layout_toEndOf="@+id/headline_list_image"
        android:background="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView android:id="@+id/headline_list_title"
            android:text="@string/text_goes_here"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/headline_list_date"
            android:text="@string/text_goes_here"
            android:textColor="@android:color/darker_gray"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<TextView android:id="@+id/headline_list_likes"
            android:text="@string/text_goes_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView android:id="@+id/headline_list_like_image"
            android:src="@drawable/ic_business"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_alignParentStart="true"/>

        <TextView android:id="@+id/headline_list_comments"
            android:text="@string/text_goes_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView android:id="@+id/headline_list_comments_image"
            android:src="@drawable/ic_business"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_alignParentStart="true"/>-->

    </RelativeLayout>

</RelativeLayout>