<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/headline_list_image"
        android:src="@drawable/ic_business"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"/>

    <TextView android:id="@+id/headline_list_title"
        android:text="@string/text_goes_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/headline_list_date"
        android:text="@string/text_goes_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/headline_list_likes"
        android:text="@string/text_goes_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView android:id="@+id/headline_list_like_image"
        android:src="@drawable/ic_business"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"/>

    <TextView android:id="@+id/headline_list_comments"
        android:text="@string/text_goes_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView android:id="@+id/headline_list_comments_image"
        android:src="@drawable/ic_business"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>